// Place your settings in this file to overwrite default and user settings.
{
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 200,
    "editor.wrappingIndent": "indent",
    "editor.minimap.enabled": false,

    "tslint.configFile": "editor/tslint.json",

    "files.exclude": {
        "tests.log": true,
        "*.log": true,
        "*.min.js": true,
        "*.orig": true,
        "*.bsi": true,
        "*.font": true,
        "*.svg": true,
        "sqlite3.c": true,
        "disclaimer*.html": true,
        "*.diff": true,
        "*.user": true,
        "AssemblyInfo.cs": true,
        "*.fbx": true,
        "**/.git": true,
        "**/.svn": true,
        "**/build": true,
        "**/output": true,
        "**/packages": true,
        "**/.DS_Store": true,
        "**/.nuget": true,
        "**/obj": true,
        "**/bin": true,
        "**/Debug": true,
        "**/Release": true,
        "**/VSCode-win32-*": true,
        "**/*.js.map": true,
        "**/*.js": { "when": "$(basename).ts" },

        "editor/plugins/asset_browser/*.js": true,
        "editor/plugins/asset_preview/*.js": true,
        "editor/plugins/dcc_link/*.js": true,
        "editor/plugins/level_editor/*.js": true,
        "editor/plugins/level_flow_editor/*.js": true,
        "editor/plugins/light_baking/*.js": true,
        "editor/plugins/log_console/*.js": true,
        "editor/plugins/navigation/*.js": true,
        "editor/plugins/omni_tool/*.js": true,
        "editor/plugins/property_editor/*.js": true,
        "editor/plugins/scene_explorer/*.js": true,
        "editor/plugins/stingray_editor/*.js": true,
        "editor/plugins/terrain_editor/*.js": true,
        "editor/plugins/texture_manager/*.js": true,
        "editor/app/*.js": true
    },

    "search.exclude": {
        "**/*.bsi": true,
        "**/disclaimer*.html": true,
        "**/dist": true,
        "**/out": true,
        "**/*.svg": true,
        "**/node_modules": true,
        "**/3rdparty": true,
        "**/bower_components": true,
        ".vscode": true,
        "tools/console": true,
        "tools/flow_editor": true,
        "tools/localizer": true,
        "tools/network_analyzer": true,
        "tools/patch_builder": true,
        "tools/timpani": true,
        "tools/tool_center": true,
        "tools/winforms_app_common": true,
        "tools/view_common": true,
        "tools/json_merge": true,
        "editor/core/stingray.js": true,
        "editor/core/stingray.d.ts": true
    },

    "files.associations": {
        "qdesktopservices": "cpp",
        "qdir": "cpp",
        "qlocalserver": "cpp",
        "regex": "cpp",
        "xiosbase": "cpp",
        "array": "cpp",
        "xutility": "cpp"
    }
}